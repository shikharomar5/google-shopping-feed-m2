<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Ced_GShop::GXpress" title="Google Shopping" sortOrder="50">
                    <resource id="Ced_GShop::product" title="Product &amp; Profile" sortOrder="60">
                        <resource id="Ced_GShop::gxpress_profile" title="Profile Manager" sortOrder="50"/>
                        <resource id="Ced_GShop::gxpress_product" title="Product Manager" sortOrder="60"/>
                    </resource>
                    <resource id="Ced_GShop::extra" title="Extras" sortOrder="70">
                        <resource id="Ced_GShop::knowledge_base" title="Knowledge Base" sortOrder="50"/>
                    </resource>
                    <resource id="Ced_GShop::developer" title="Developer" sortOrder="80">
                        <resource id="Ced_GShop::gxpress_cron" title="Cron Logs" sortOrder="50"/>
                        <resource id="Ced_GShop::logs" title="Activity Logs" sortOrder="60"/>
                        <resource id="Ced_GShop::gxpress_products_feeds" title="Product Feeds" sortOrder="70"/>
                    </resource>
                    <resource id="Ced_GShop::configuration" title="Configuration" sortOrder="90">
                        <resource id="Ced_GShop::gshop_config" title="Google Shopping Configuration"/>
                        <resource id="Ced_GShop::account" title="Manage Accounts" sortOrder="50"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Ced_GShop::system_config" title="Google Shopping Configuration"></resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
